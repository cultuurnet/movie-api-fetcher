{
    "name": "cultuurnet/movie-api-fetcher",
    "config": {
        "platform": {
            "php": "7.4"
        },
        "allow-plugins": {
            "ocramius/package-versions": true
        }
    },
    "description": "fetch data from Kinepolis API",
    "type": "project",
    "license": "Apache-2.0",
    "authors": [],
    "require": {
        "ext-json": "*",
        "silex/silex": "~1.3",
        "deralex/yaml-config-service-provider": "~1.0",
        "knplabs/console-service-provider": "~1.0",
        "monolog/monolog": "~1.11",
        "cultuurnet/valueobjects": "~3.0",
        "cultuurnet/culturefeed-php": "~1.6",
        "cultuurnet/transform-entry-store": "~0.1"
    },
    "require-dev": {
        "phpunit/phpunit": "~5.7",
        "escapestudios/symfony2-coding-standard": "~2.9",
        "squizlabs/php_codesniffer": "~2.5.1",
        "phing/phing": "~2.14",
        "satooshi/php-coveralls": "~1.0"
    },
    "autoload": {
        "psr-4": {
            "CultuurNet\\MovieApiFetcher\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CultuurNet\\MovieApiFetcher\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "branch-alias": {
            "dev-master": "0.x-dev"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "phpstan": "vendor/bin/phpstan analyse",
        "migrate": "vendor/bin/doctrine-dbal migrations:migrate --no-interaction",
        "ci": [
            "composer phpstan",
            "composer test",
            "composer cs"
        ],
        "cs": "php-cs-fixer fix -v --diff --dry-run",
        "cs-fix": "php-cs-fixer fix -v --diff",
        "rector": "vendor/bin/rector process --dry-run"
    }
}
